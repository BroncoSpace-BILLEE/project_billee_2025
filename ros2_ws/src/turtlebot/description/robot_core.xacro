<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_core">
    
    <xacro:include filename="materials.xacro"/>
    <xacro:include filename="inertias.xacro"/>
    


    <!-- BASE -->
    <link name="base_link"/> 

    <!-- chassis -->
    <joint name="chasis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <link name="chassis">
        <visual>
            <material name="white"></material>
            <origin xyz="0.15 0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.15 0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>

        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0.175 0" rpy="${-pi/2} 0 0"/>
    </joint>
    
    <link name="left_wheel">
        <visual>
            <material name="blue"></material>
            <geometry>
                <cylinder radius="0.05" length="0.04"></cylinder>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"></cylinder>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 -1"/>
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
    </joint>
    
    <link name="right_wheel">
        <visual>
            <material name="blue"></material>
            <geometry>
                <cylinder radius="0.05" length="0.04"></cylinder>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"></cylinder>
            </geometry>
        </collision>
        
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.24 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <link name="caster_wheel">
        <visual>
            <material name="black"></material>
            <geometry>
                <sphere radius="0.05"></sphere>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
</robot>